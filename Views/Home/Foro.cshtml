@model List<Tema>

@{
    ViewData["Title"] = "Foro";
}

<h2 class="titulo">Foro de discusi√≥n</h2>

<div class="acciones-superiores">
    <a href="/Home/CrearTema" class="btn-primary">Crear nuevo tema</a>
</div>

<div class="foro-container">
    @foreach (var t in Model)
    {
        <a href="/Home/DetalleTema/@t.Id" class="foro-card">
            <h3>@t.Titulo</h3>
            <p>@t.Contenido.Substring(0, Math.Min(t.Contenido.Length, 120))...</p>
            <small>Publicado el @t.Fecha.ToString("dd/MM/yyyy HH:mm")</small>
        </a>
    }
</div>
