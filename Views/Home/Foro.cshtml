@model List<Tema>

@{
    ViewData["Title"] = "Foro";
}

<h2>Foro de discusi√≥n</h2>

<a class="btn btn-primary mb-3" href="/Home/CrearTema">Crear nuevo tema</a>

<div class="list-group">
    @foreach (var t in Model)
    {
        <a href="/Home/DetalleTema/@t.Id" class="list-group-item list-group-item-action">
            <h4>@t.Titulo</h4>
            <p>@t.Contenido.Substring(0, Math.Min(t.Contenido.Length, 120))...</p>
            <small>Publicado el @t.Fecha.ToString("dd/MM/yyyy HH:mm")</small>
        </a>
    }
</div>
