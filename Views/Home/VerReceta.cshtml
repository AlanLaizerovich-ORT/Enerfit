

@{
    ViewData["Title"] = "Ver receta";
}

@if (Model == null)
{
    <h2 style="color:red;">Error: la receta no existe.</h2>
    <a href="/Home/Recetas" class="btn btn-secondary">Volver</a>
}
else
{
    <h1>@Model.Titulo</h1>
    

    <h3>Ingredientes</h3>
    

    <div class="botones">
        <a href="/Home/EditarReceta/@Model.IdRecetas" class="btn btn-warning">Editar</a>
        <a href="/Home/BorrarReceta/@Model.IdRecetas" class="btn btn-danger">Borrar</a>
        <a href="/Home/Recetas" class="btn btn-secondary">Volver</a>
    </div>
}

<style>
    .botones a { margin-right:12px; }
</style>
